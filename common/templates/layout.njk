{% from "components/footer/macro.njk" import govukFooter %}
{% from 'header/macro.njk' import mojHeader %}

{% extends "template.njk" %}

{% block header %}
  {{ mojHeader({
    organisationLabel: {
      text: 'Organisation name',
      href: '#'
    },
    serviceLabel: {
      text: 'Service name',
      href: '#'
    },
    navigation: {
      label: 'Account navigation',
      items: [{
        text: 'Account name',
        href: '#',
        active: true
      }, {
        text: 'Sign out',
        href: '#'
      }]
    }
  }) }}
{% endblock %}

{% block pageTitle %}MOJ Node.js boilerplate{% endblock %}

{% block head %}
  {% include "common/templates/includes/head.njk" %}
{% endblock %}

{% block footer %}
  {{
    govukFooter({
      meta: {
        html: 'Built by the <a href="#" class="govuk-footer__link">Government Digital Service</a>'
      }
    })
  }}
{% endblock %}

{% block bodyEnd %}
  {% include "common/templates/includes/scripts.njk" %}
{% endblock %}
